<Window x:Class="Harjoitus_21.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Harjoitus_21"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="525">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <CheckBox Name="checkBox1" Content="rahka" Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked"/>
            <CheckBox Name="checkBox2" Content="kana" Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked"/>
            <CheckBox Name="checkBox3" Content="leipä" Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked"/>
            <CheckBox Name="checkBox4" Content="keksi" Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked"/>
            <CheckBox Name="checkBox5" Content="karkki" Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked"/>

            <Button Content="Osta" Click="OstaButton_Click" Margin="10"/>
        </StackPanel>

        <StackPanel Name="stockPanel" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10">
            <TextBlock Text="Tuotteet ostoskorissa:" FontWeight="Bold" Margin="0,0,0,10"/>
        </StackPanel>
    </Grid>
</Window>
